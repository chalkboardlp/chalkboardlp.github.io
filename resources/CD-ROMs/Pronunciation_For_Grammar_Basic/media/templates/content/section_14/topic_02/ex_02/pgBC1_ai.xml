<exercise>
	<rubric><![CDATA[<b>Look at each sentence. Then listen, and repeat what you hear.</b>]]></rubric>
	<questions>
		<question>
			<sentence><![CDATA[I bought a blue shirt and two green ones.]]></sentence>
			<audio>templates/content/section_14/topic_02/ex_02/assets/audio_01.mp3</audio>
			<chain>
				<text><![CDATA[green ones<br/>]]></text>
				<text><![CDATA[two green ones<br/>]]></text>
				<text><![CDATA[a blue shirt and two green ones<br/>]]></text>
				<text><![CDATA[I bought a blue shirt and two green ones.<br/>]]></text>
			</chain>				
		</question>
		<question>
			<sentence><![CDATA[I prefer the glass table to the wooden one.]]></sentence>
			<audio>templates/content/section_14/topic_02/ex_02/assets/audio_02.mp3</audio>
