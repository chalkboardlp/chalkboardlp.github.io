<exercise>
	<rubric><![CDATA[<b>Look at each sentence. Then listen, and repeat what you hear.</b>]]></rubric>
	<questions>
		<question>
			<sentence><![CDATA[I like Mary because she's so friendly.]]></sentence>
			<audio>templates/content/section_13/topic_01/ex_01/assets/audio_01.mp3</audio>
			<chain>
				<text><![CDATA[so friendly<br>]]></text>
				<text><![CDATA[she's so friendly<br>]]></text>
				<text><![CDATA[because she's so friendly.<br>]]></text>
				<text><![CDATA[I like Mary because she's so friendly.]]></text>
			</chain>				
		</question>
		<question>
			<sentence><![CDATA[He needs help with his maths homework.]]></sentence>
			<audio>templates/content/section_13/topic_01/ex_01/assets/audio_02.mp3</audio>
			<chain>
				<text><![CDATA[<font size="34"><br /></font>his maths homework<br>]]></text>
				<text><![CDATA[help with his maths homework<br>]]></text>
				<text><![CDATA[He needs help with his maths homework.]]></text>
			</chain>
		</question>
