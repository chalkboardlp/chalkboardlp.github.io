<?xml version="1.0" encoding="utf-8"?>
<exercise>
	<rubric><![CDATA[<b>Listen and choose the correct continuation.</b>]]></rubric>
	<questions>
		<question>
			<sentence><![CDATA[I'm just as slim as my brother,]]></sentence>
			<audio>templates/content/section_16/topic_02/ex_02/assets/audio_01.mp3</audio>
			<options>
				<option answer="correct">but not as tall.</option>
				<option>but not as my sister.</option>
			</options>				
		</question>
		<question>
			<sentence><![CDATA[She's twice as old as her daughter,]]></sentence>
			<audio>templates/content/section_16/topic_02/ex_02/assets/audio_02.mp3</audio>
			<options>
				<option>but not as famous.</option>
				<option answer="correct">not three times as old.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[They're just as dark as their mother,]]></sentence>
			<audio>templates/content/section_16/topic_02/ex_02/assets/audio_03.mp3</audio>
			<options>
				<option answer="correct">but not as tall.</option>
				<option>but not as dark as their father.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[She's nearly as pretty as her sister,]]></sentence>
			<audio>templates/content/section_16/topic_02/ex_02/assets/audio_04.mp3</audio>
			<options>
				<option answer="correct">but not quite as pretty.</option>
				<option>but not as slim.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[He's three times as old as his grandson,]]></sentence>
			<audio>templates/content/section_16/topic_02/ex_02/assets/audio_05.mp3</audio>
			<options>				
				<option>not three times as rich.</option>
				<option answer="correct">not his granddaughter.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[He's half as tall as his father,]]></sentence>
			<audio>templates/content/section_16/topic_02/ex_02/assets/audio_06.mp3</audio>
			<options>
				<option answer="correct">not half as strong.</option>
				<option>not his grandfather.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[We've got as much money as our cousins,]]></sentence>
			<audio>templates/content/section_16/topic_02/ex_02/assets/audio_07.mp3</audio>
			<options>
				<option answer="correct">but not as much time.</option>
				<option>but not as much as our grandparents.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[My aunt's got almost as many friends as my mother,]]></sentence>
			<audio>templates/content/section_16/topic_02/ex_02/assets/audio_08.mp3</audio>
			<options>
				<option>but not as many children.</option>
				<option answer="correct">not almost as many as my father.</option>							
			</options>
		</question>
	</questions>
</exercise>