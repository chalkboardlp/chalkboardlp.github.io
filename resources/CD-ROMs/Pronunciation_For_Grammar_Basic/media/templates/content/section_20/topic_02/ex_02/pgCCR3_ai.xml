<?xml version="1.0" encoding="utf-8"?>
<exercise>
	<rubric><![CDATA[<b>Listen and choose the correct continuation.</b>]]></rubric>
	<questions>
		<question>
			<sentence><![CDATA[He says he's Irish,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_01.mp3</audio>
			<options>
				<option answer="correct">not she says.</option>
				<option>not Scottish.</option>	
			</options>				
		</question>
		<question>
			<sentence><![CDATA[She says she works near Belfast,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_02.mp3</audio>
			<options>
				<option>not in Dublin.</option>
				<option answer="correct">not in Belfast.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[They say they're sorry about the broken cup,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_03.mp3</audio>
			<options>
				<option answer="correct">not the broken vase.</option>
				<option>not angry about it.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[She says she's happy for you,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_04.mp3</audio>
			<options>
				<option answer="correct">not for me.</option>
				<option>not because of you.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[They say they had a good plane journey,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_05.mp3</audio>
			<options>				
				<option>not a bad one.</option>
				<option answer="correct">not a good train journey.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[He says he's married to a Brazilian woman,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_06.mp3</audio>
			<options>
				<option answer="correct">not engaged to one.</option>
				<option>not a Mexican woman.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[She says she plays tennis every Friday after school,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_07.mp3</audio>
			<options>
				<option>not watches tennis.</option>
				<option answer="correct">not every Tuesday.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[He says he speaks Spanish with his friends,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_08.mp3</audio>
			<options>
				<option>not with his family.</option>
				<option answer="correct">not Italian.</option>							
			</options>
		</question>
		<question>
			<sentence><![CDATA[They say they're really hungry,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_09.mp3</audio>
			<options>
				<option answer="correct">not just a bit hungry.</option>
				<option>not really thirsty.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[She says she likes children and dogs,]]></sentence>
			<audio>templates/content/section_20/topic_02/ex_02/assets/audio_10.mp3</audio>
			<options>
				<option answer="correct">not dislikes them.</option>
				<option>not children and cats.</option>
			</options>
		</question>
	</questions>
</exercise>