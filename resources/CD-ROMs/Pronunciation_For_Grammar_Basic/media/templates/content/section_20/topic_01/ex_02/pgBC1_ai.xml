<exercise>
	<rubric><![CDATA[<b>Look at each sentence. Then listen, and repeat what you hear.</b>]]></rubric>
	<questions>
		<question>
			<sentence><![CDATA[She told me the children weren't at home.]]></sentence>
			<audio>templates/content/section_20/topic_01/ex_02/assets/audio_01.mp3</audio>
			<chain>
				<text><![CDATA[weren't at home<br>]]></text>
				<text><![CDATA[the children weren't at home<br>]]></text>
				<text><![CDATA[She told me the children weren't at home.]]></text>
			</chain>				
		</question>
		<question>
			<sentence><![CDATA[I told you they wouldn't arrive on time.]]></sentence>
			<audio>templates/content/section_20/topic_01/ex_02/assets/audio_02.mp3</audio>
			<chain>
				<text><![CDATA[<font size="34"><br /></font>arrive on time<br>]]></text>
				<text><![CDATA[they wouldn't arrive on time<br>]]></text>
				<text><![CDATA[I told you they wouldn't arrive on time.]]></text>
			</chain>
		</question>
		<question>
			<sentence><![CDATA[They told us it didn't matter at all.]]></sentence>
			<audio>templates/content/section_20/topic_01/ex_02/assets/audio_03.mp3</audio>
			<chain>
				<text><![CDATA[<font size="34"><br /></font><font size="31"><br /></font>didn't matter at all<br>]]></text>
				<text><![CDATA[it didn't matter at all<br>]]></text>
				<text><![CDATA[They told us it didn't matter at all.]]></text>
			</chain>				
		</question>
		<question>
			<sentence><![CDATA[She told them she wasn't feeling OK.]]></sentence>
			<audio>templates/content/section_20/topic_01/ex_02/assets/audio_04.mp3</audio>
